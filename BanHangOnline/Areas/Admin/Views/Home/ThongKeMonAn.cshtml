@model IEnumerable<BanHangOnline.Areas.Admin.Data.TopProductViewModel>

<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title" style="height: 40px;">Món ăn được đặt nhiều nhất</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <div class="d-md-flex">
                <div class="box-dulieu">
                    <div class="tuan">
                        @foreach (var item in Model)
                        {
                            <div class="colum-2">
                                <div class="colum-2-title">
                                    <div class="title-item">
                                        <p>@item.ProductName</p>
                                        <a target="_blank" href="/chi-tiet-san-pham/@item.ProductUrl"><i class="fa fa-external-link" aria-hidden="true"></i></a>
                                    </div>
                                </div>
                                <div class="colum-2-percent">
                                    <div class="percent-item">
                                        <div class="percent-item-1">
                                            <div class="title-colum percent-item-1-title">
                                                <p>@item.Count</p>
                                            </div>
                                        </div>
                                        <div class="percent-item-2">
                                            <div class="percent">
                                                <div class="bkcolor-percent" style="width: @((int)item.Percentage)%"></div>
                                                <span>@((int)item.Percentage)%</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>

    </div>
</div>
