    /*--------------------VIDEO---------------------*/

    .banner-video {
        position: relative;
        width: 100%;
        height: 500px;
        overflow: hidden;
        /*margin-top: 130px;*/
    }

        .banner-video video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .banner-video .content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: #fff;
        }

        .banner-video h1 {
            font-size: 3em;
            margin-bottom: 20px;
        }

        .banner-video p {
            font-size: 1.2em;
            margin-bottom: 30px;
        }

        .banner-video .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #ff5e15;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .banner-video .btn:hover {
                background-color: #e54d0c;
            }

    /*-----------------SWIPER1---------------*/

    .content-slider-2 {
        /*border-radius: 10px;*/
        cursor: pointer;
        position: relative;
        /*padding: 40px;*/
        height: 100%;
        margin-bottom: 100px;
        text-align: justify;
        transition: .5s;
        overflow: hidden;
        /*box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.048), 0 12px 30px 0 rgba(0, 0, 0, 0.068);*/
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

        .content-slider-2 h3 {
            margin-top: 20px;
            color: #fff;
            letter-spacing: -1px;
        }

        .content-slider-2 p {
            color: rgb(143, 143, 143);
            letter-spacing: 0px;
        }

        .content-slider-2 strong {
            margin-top: 150px;
        }

        /*        .content-slider-2:hover {
            background: linear-gradient(to bottom, #ff5e00d0 0%, #ff0281d0 100%);
