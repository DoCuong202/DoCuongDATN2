@model BanHangOnline.Models.EF.Posts
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .title {
        margin-bottom: 20px;
        color: #6950cc;
        display: inline;
        font-family: SVN-Hydrella;
        font-size: 29px;
        font-weight: 500;
        line-height: 40px;
        text-align: center;
    }

    .content span{
        color: #262626;
        font-family: Texturina;
        font-size: 20px !important;
        font-weight: 300;
        line-height: 31px;
    }
    .blog_createday-detail {
        color: #808080;
        font-size: 14px;
    }
    .blog p {
        color: #262626;
        font-family: Texturina;
        font-size: 20px !important;
        font-weight: 300;
        line-height: 31px;
    }
    .blog span {
        color: #262626;
        font-family: Texturina;
        font-size: 20px !important;
        font-weight: 300;
        line-height: 31px;
    }
    .blog img{
        width: 100% !important;
    }
    .Blog_LQ h4 {
        color: #262626;
        font-family: Texturina;
        font-size: 30px !important;
        font-weight: 300;
        line-height: 31px;
    }

</style>

<div class="container" style="margin-top: 120px;">
    <div class="row">
        <div class="col-sm-8 blog">
            <h4 class="title">@Model.Title</h4>
            <p>
                @Model.CreatedDate.Day/@Model.CreatedDate.Month/@Model.CreatedDate.Year
            </p>
            <p>@Model.Description</p>
            <hr />
            <p class="content">@Html.Raw(Model.Detail)</p>
        </div>
        <div class="col-sm-4">
            <div class="row">
                <div class="col-12">
                    <div class="Blog_LQ">
                        <h4>Bài viết mới nhất</h4>
                    </div>
                </div>
                <div class="col-12 mt-2">
                    <div class="row">
                        @Html.Action("BaiVietMoiNhat", "Blogs")
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />

</div>

