        }

    /*----------------------------TEAM------------------------*/

    .title_team {
        margin-top: 50px;
        margin-bottom: 50px;
        width: 100%;
        display: block;
        text-align: center;
    }

    .team-1 {
        width: 100%;
        height: 400px;
        cursor: pointer;
        position: relative;
    }

    .avt_img_member {
        height: 300px;
        overflow: hidden;
        background-position: center center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .team-word {
        height: 100px;
        width: 100%;
        text-align: center;
        background: #fe4c50;
        color: #fff;
        font-weight: 600;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .team-word h5 {
            color: #fff;
        }

        .team-word p {
            color: #fff;
        }

    .team-space {
        background-color: rgba(0, 0, 0, 0.534);
        position: absolute;
        top: 5%;
        left: 5%;
        width: 90%;
        height: 65%;
        opacity: 0;
        transition: .5s;
    }

    .team-1:hover > .team-space {
        opacity: 1;
    }

    .info {
        position: absolute;
        top: 5%;
        left: 5%;
        width: 90%;
        height: 65%;
        color: #fff;
        display: none;
        background-color: rgba(0, 0, 0, 0.534);
        transition: .5s;
    }

    .content_info {
        width: 100%;
        height: 100%;
        padding: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .team-1:hover > .info {
        display: block;
    }

    .info-fb-space {
        background: linear-gradient(to bottom, #ff3b3b 0%, #fd198b 100%);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        transform: scale(0);
        transition: .5s;
    }

    /*----------------------------POST_MAIN----------------------*/

    .blogs {
        width: 100%;
        overflow: hidden;
    }

    .ThreePost {
        display: flex;
        flex-wrap: wrap;
        align-content: space-between;
        height: 400px;
    }

    .col-pos_2 {
        padding-top: 40px;
        position: relative;
        display: block;
        text-align: start;
        padding-left: 30px;
        padding-top: 40px;
        color: #fff;
        width: 100%;
        height: 400px;
        background-position: center center;
        background-size: cover;
        background-repeat: no-repeat;
        margin-bottom: 20px;
    }

        .col-pos_2 img {
            width: 100%;
        }

        .col-pos_2 h3 {
            color: #fff;
        }

        .col-pos_2 p {
            color: #fff;
