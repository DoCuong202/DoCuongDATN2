                    </div>

                </div>
            </div>
            @Html.Action("MonAn", "Home")
            <!-- /.row -->
        </div><!--/. container-fluid -->
        <!-- Main content -->
        <script src="https://cdn.jsdelivr.net/npm/echarts@5.5.0/dist/echarts.min.js"></script>
        <script src="~/Scripts/jquery-3.4.1.js"></script>
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    </div>





    <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" style="font-family: Texturina; font-size: 30px; font-weight: 300;">Cập nhật trạng thái</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body p-3">
                    <select id="statusSelect" style="font-family: Texturina; font-size: 20px; font-weight: 300;" class="form-control" aria-label="Default select example">
                        <option selected>Chọn trạng thái</option>
                        <option value="-1">Đang chuẩn bị</option>
