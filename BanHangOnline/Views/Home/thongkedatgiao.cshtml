@model IEnumerable<BanHangOnline.Models.EF.Order>

<style>
    .list-item{
    }
    .item{
        padding-left: 20px;
        height: 40px;
    }
    #world-map-markers{
        overflow: scroll !important;
        position: relative;
    }
    .header-item{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 40px;
    }
    .no-padding {
        padding: 0px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">ĐƠN ĐẶT GIAO</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <div class="d-md-flex">
                            <div class="p-1 flex-fill" style="overflow: hidden">
                                <!-- Map will be created here -->
                                <div id="world-map-markers" style="height: 325px; overflow: hidden">
                                    <div class="header-item">
                                        <div class="row">
                                            <div class="col-4 no-padding">Code</div>
                                            <div class="col-4 no-padding">Ngày tạo</div>
                                            <div class="col-4 no-padding">Trạng thái</div>
                                        </div>
                                    </div>
                                    <div class="list-item">
                                        <div class="item"></div>
                                        @if (Model != null && Model.Any())
                                        {
                                            foreach (var item in Model)
                                            {
                                                <div class="item">
                                                    <div class="row">
                                                        <div class="col-4 no-padding">@item.Code</div>
                                                        <div class="col-4 no-padding">@item.CreatedDate</div>
                                                        @if (@item.statusOrder == -1)
                                                        {
                                                            <div class="col-4 no-padding">Đang chuẩn bị</div>
                                                        }
                                                        else if (@item.statusOrder == 0)
                                                        {
                                                            <div class="col-4 no-padding">Đang giao</div>
                                                        }
                                                        else if (@item.statusOrder == 1)
                                                        {
                                                            <div class="col-4 no-padding">Giao thành công</div>
                                                        }
                                                        else if (@item.statusOrder == 2)
                                                        {
                                                            <div class="col-4 no-padding">Giao thất bại</div>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div><!-- /.d-md-flex -->
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <div class="col-md-4">
                <!-- Info Boxes Style 2 -->
                <div class="info-box mb-3 bg-warning">
                    <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Đang chuẩn bị</span>
                        <span class="info-box-number">@ViewBag.dangchuanbi</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
                <div class="info-box mb-3 bg-success">
                    <span class="info-box-icon"><i class="far fa-heart"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Đang giao</span>
                        <span class="info-box-number">@ViewBag.danggiao</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
                <div class="info-box mb-3 bg-danger">
                    <span class="info-box-icon"><i class="fas fa-cloud-download-alt"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Không thành công</span>
                        <span class="info-box-number">@ViewBag.giaothatbai</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
                <div class="info-box mb-3 bg-info">
                    <span class="info-box-icon"><i class="far fa-comment"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Kết thúc</span>
                        <span class="info-box-number">@ViewBag.giaothanhcong</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
        </div>
    </div>
</div>
