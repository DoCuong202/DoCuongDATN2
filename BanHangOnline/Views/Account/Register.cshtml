                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group wid100">
                                    <p class="lable_p">Nhập Lại Mật Khẩu</p>
                                    <div class="col-md-10 no-padding">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group wid100">
                                    <div class="col-md-10 no-padding">
                                        @Html.TextBoxFor(m => m.Role, new { @class = "form-control", @Value = "Customer", @Type = "hidden" })
                                    </div>
                                </div>
                                <div class="form-group wid100">
                                    <div class="col-md-offset-2 col-md-10 no-padding">
                                        <input type="submit" value="Tạo tài khoản" class="btn btn-default btn-login" />
                                    </div>
                                </div>
                                @*<p>
                @Html.ActionLink("Tạo tài khoản mới", "Register")
            </p>*@
                                @* Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>*@
                            }
                        </section>
                    </div>
                </div>
                <div class="col-md-5 no-padding">
                    <div class="item_khongian">
                        <div class="item-bg">
                            <img src="https://aban.com.vn/wp-content/uploads/2023/03/dab9c45f0def4d04f376f1fc09a29d6b-scaled.jpg" />
                        </div>
                        <img class="imt-top" src="https://aban.com.vn/wp-content/uploads/2023/03/Vector1.png" />
                        <img class="imt-left" src="https://aban.com.vn/wp-content/uploads/2023/03/Vector4.png" />
                        <img class="imt-right" src="https://aban.com.vn/wp-content/uploads/2023/03/Vector2.png" />
                        <img class="imt-bottom" src="https://aban.com.vn/wp-content/uploads/2023/03/Vector1.png" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

