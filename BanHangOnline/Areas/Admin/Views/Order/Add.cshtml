<script>
    $(document).ready(function () {
        $("body").on('click', "#submit-add", function (e) {
            var customername = $("#customername").val();
            var phone = $("#phone").val();
            var address = $("#address").val();
            var note = $("#note").val();
            var id = $("#IDOrder").val();

            $.ajax({
                url: '/order/add',
                type: 'POST',
                data: { customername: customername, phone: phone, address: address, note: note, id : id },
                success: function (rs) {
                    if (rs.success) {
                        location.href = location.origin + "/admin/order/index";
                    }
                }
            })
        })
    })
</script>


