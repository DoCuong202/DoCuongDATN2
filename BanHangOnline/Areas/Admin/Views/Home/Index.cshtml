                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <div class="d-md-flex">
                            <div class="box-dulieu">
                                <div class="tuan">
                                    <div class="colum-2">
                                        <div class="colum-2-title">
                                            <div class="title-item">
                                                <p>bài viết 1</p>
                                                <a target="_blank" href="#"><i class="fa fa-external-link" aria-hidden="true"></i></a>
                                            </div>
                                        </div>
                                        <div class="colum-2-percent">
                                            <div class="percent-item">
                                                <div class="percent-item-1">
                                                    <div class="title-colum percent-item-1-title">
                                                        <p>200</p>
                                                    </div>
                                                </div>
                                                <div class="percent-item-2">
                                                    <div class="percent">
                                                        <div class="bkcolor-percent" style="width: 100%"></div>
                                                        <span>100%</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
