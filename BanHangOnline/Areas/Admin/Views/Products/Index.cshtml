@section scripts{
    <script>

        $(document).ready(function () {

            //$('body').on("click", ".imgproduct", function () {
            //    var proid = $(this).attr("data-id");
            //    $("#dialog #myIframe").attr("src", "/admin/ProductImages/Index?id=" + proid);
            //    $("#dialog").dialog("open");
            //    return false;
            //});

            //$("#dialog").dialog();

            //$("#dialog").dialog({
            //    autoOpen: false,
            //    show: "fade",
            //    hide: "fade",
            //    model: true,
            //    height: '600',
            //    width: '700',
            //    resizable: true,
            //    title: 'Quản lý ảnh sản phẩm',
            //    close: function () {
            //        window.location.reload();
            //    }
            //});

            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");

                var conf = confirm("Bạn chắc chắn xóa");
                if (conf === true) {
                    $.ajax({
                        url: '/admin/products/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            } else {
                                alert("Xóa không thành công")
                            }
                        }
                    })
                }
            });

            $('body').on('click', '.btnHome', function () {
                var id = $(this).data("id");
                var btn = $(this);
                $.ajax({
                    url: '/admin/products/ishome',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {

                        if (rs.success) {
                            if (rs.isHome) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>")
                            }
                        }

                    }
                })
            });

            $('body').on('click', '.btnActive', function () {
                var id = $(this).data("id");
                var btn = $(this);
                $.ajax({
                    url: '/admin/products/isactive',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {

                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>")
                            }
                        }

                    }
                })
            });



            $('body').on('click', '.btnFeature', function () {
                var id = $(this).data("id");
                var btn = $(this);
                $.ajax({
                    url: '/admin/products/isfeature',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {

                        if (rs.success) {
                            if (rs.isFeature) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>")
                            }
                        }

                    }
                })
            });

            $('body').on('click', '.btnSale', function () {
                var id = $(this).data("id");
                var btn = $(this);
                $.ajax({
                    url: '/admin/products/issale',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {

                        if (rs.success) {
                            if (rs.isSale) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>")
                            }
                        }

                    }
                })
            });

            $('body').on('click', '.btnHot', function () {
                var id = $(this).data("id");
                var btn = $(this);
                $.ajax({
                    url: '/admin/products/ishot',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {

                        if (rs.success) {
                            if (rs.isHot) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>")
                            }
                        }

                    }
                })
            });

            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                    } else {
                        checkbox.attr('selected', '');
                    }
                })
            })

            $('body').on('click', '#btnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                        var id = $(this).val();
                        if (i === 0) {
                            str += id;
                        } else {
                            str += "," + id;
                        }
                        i++;
                    } else {
                        checkbox.attr('selected', '');
                    }
                })
                if (str.length > 0) {
                    var conf = confirm("Bạn có muốn xóa các bản ghi này hay không?");
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/products/deleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        })
                    }
                }
            })
        })
    </script>
}