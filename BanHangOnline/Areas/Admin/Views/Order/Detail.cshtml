@if (Model != null)
{
    var datenow = DateTime.Now;
    var tongtien = decimal.Zero;
    var sl = 0;
    var Total = decimal.Zero;
    var Tax = decimal.Zero;
    var shipping = decimal.Zero;
    <div class="container cn-order-detail pt-3 pb-3">
        <div class="invoice p-3 mb-3">
            <!-- title row -->
            <div class="row">
                <div class="col-12 mb-3">
                    <h4 class="text-center">
                        CHI TIẾT ĐƠN HÀNG
                    </h4>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    From
                    <address>
                        <strong>BUI HUY BAO</strong><br>
                        795 Folsom Ave, Suite 600<br>
                        San Francisco, CA 94107<br>
                        Phone: (804) 123-5432<br>
                        Email: info@almasaeedstudio.com
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    To
                    <address>
                        <strong>@Model.CustomerName</strong><br>
                        @Model.Address<br>
                        Phone: @Model.Phone<br>
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    Đơn hàng<br>
                    <b>Mã đơn:</b> @Model.Code<br>
                    Ngày tạo: @Model.CreatedDate<br>
                    Account: 968-34567
                </div>
                <!-- /.col -->
            </div>
            @Html.Action("ProductInDetailAdmin", "Order", new {id = Model.Id})
            <div class="row">
                <!-- accepted payments column -->
                <div class="col-6">
                    <p class="lead">Phương thức thanh toán và nhận hàng: @Model.TypePayment</p>
                </div>
                <!-- /.col -->
                <div class="col-6">
                    <p class="lead">Chi phí:</p>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th style="width:50%">Số lượng:</th>
                                    <td>@Model.Quantity</td>
                                </tr>
                                <tr>
                                    <th>Tax (9.3%)</th>
                                    <td>0đ</td>
                                </tr>
                                <tr>
                                    <th>Shipping:</th>
                                    <td>0đ</td>
                                </tr>
                                <tr>
                                    <th>Total:</th>
                                    <td>@BanHangOnline.Common.Common.FormatNumber(Model.TotalAmount, 0)đ</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.col -->
                @*<div class="col-12">
                    <button type="button" class="btn btn-success PrintBill">
                        <i class="far fa-credit-card"></i> Print
                    </button>
                </div>*@
            </div>
        </div>
    </div>
}
