                    <span class="info-box-icon bg-warning elevation-1" style="background-color: #661aff !important;"><i class="fa fa-book" style="color: #fff;"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Tổng bài viết</span>
                        <span class="info-box-text">@ViewBag.countPost <p>bài viết</p></span>
                    </div>
                </div>
            </div>

            <div class="clearfix hidden-md-up"></div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-success elevation-1"><i class="fa fa-user-plus"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Tổng tài khoản</span>
                        <span class="info-box-text">@ViewBag.countProduct <p>tài khoản</p></span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-warning elevation-1"><i class="fa fa-bar-chart" style="color: #fff;" aria-hidden="true"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Tổng lượt truy cập</span>
                        <span class="info-box-text">@ViewBag.countPost <p>lượt</p></span>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
        @Html.Action("datgiao", "Home")

        @Html.Action("GetSoLuongTheoNamThang", "Home")

        <!-- /.row -->
