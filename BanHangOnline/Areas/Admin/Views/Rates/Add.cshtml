@model BanHangOnline.Models.EF.Rate
@{
    ViewBag.Title = "Thêm mới đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/rates" class="nav-link">Đánh giá</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới đánh giá</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới đánh giá</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Đánh giá</li>
                    <li class="breadcrumb-item active">Thêm mới đánh giá</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới đánh giá</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Add", "Rates", FormMethod.Post, new { }))
            {
                @Html.HiddenFor(x => x.CreatedDate, new { Value = DateTime.Now })
                @Html.HiddenFor(x => x.ModifiedDate, new { Value = DateTime.Now })
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false)
                <div class="bs-stepper-content">
                    <!-- your steps content here -->
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mã sản phẩm</label>
                            @Html.TextBoxFor(x => x.IdProduct, new { @class = "form-control", @placeholder = "Nhập tiêu đề" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Nội dung</label>
                            @Html.TextBoxFor(x => x.ContentRate, new { @class = "form-control", @placeholder = "Nhập tiêu đề" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Rate</label>
                            @Html.TextBoxFor(x => x.StartRate, new { @class = "form-control", @placeholder = "Nhập tiêu đề" })
                        </div>
                    </div>
                    <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">

                        <a class="btn btn-danger" href="/admin/rates">Quay lại</a>
                        <button type="submit" class="btn btn-primary">Thêm</button>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

